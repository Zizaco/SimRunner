{
    "connectionString": "mongodb://localhost:27017",
    "templates": [
        {
            "name": "person",
            "database": "simrunner",
            "collection": "people",
            "drop": true,
            "template": {
                "_id": "%objectid",
                "sequence": "%sequence",
                "uuidstr": "%uuidString",
                "uuidbin": "%uuidBinary",
                "first": "%name.firstName",
                "last": "%name.lastName",
                "constant": 12.8,
                "constantDate": {"$date": "2010-02-26"},
                "birthday": "%date.birthday",
                "embed": {
                    "key": "value",
                    "character": "%lordOfTheRings.character"
                },
                "array": [
                    98,
                    {"%natural": {"max": 100}},
                    {"now": "%now"}
                ],
                "payload": {"%binary": {"size": 32}}
             },
            "remember": ["_id"],
            "indexes": [
            ]
        }
    ],
    "workloads": [
        {
            "name": "Insert",
            "template": "person",
            "op": "insert",
            "threads": 1,
            "batch": 100,
            "pace": 1000
        },
        {
            "name": "Find by key",
            "template": "person",
            "op": "find",
            "params": {
                "filter": { "_id": "#_id" }
            },
            "threads": 1
        },
        {
            "name": "Update",
            "template": "person",
            "op": "updateOne",
            "params": {
                "filter": {"_id": "#_id"},
                "update": {"$set": {"updated": "%now"}}
            },
            "pace": 1000
        }
    ]
    
}