{
    "connectionString": "mongodb://localhost:27017",
    "http": {
        "enabled": true,
        "port": 3000,
        "host": "localhost"
    },
    "reportInterval": 10000,
    "templates": [
        {
            "name": "person",
            "database": "simrunner",
            "collection": "people",
            "drop": true,
            "variables": {
                "num": {"%natural": {"min": 1, "max": 10}}
            },
            "template": {
                "_id": "%objectid",
                "sequence": "%sequence",
                "uuidstr": "%uuidString",
                "uuidbin": "%uuidBinary",
                "first": "%name.firstName",
                "last": "%name.lastName",
                "constant": 12.8,
                "constantDate": {"$date": "2010-02-26"},
                "birthday": "%date.birthday",
                "embed": {
                    "key": "value",
                    "character": "%lordOfTheRings.character"
                },
                "array": [
                    98,
                    {"%natural": {"max": 100}},
                    {"now": "%now"}
                ],
                "payload": {"%binary": {"size": 32}},
                "num": "##num",
                "variableArray": {
                    "%array": {
                        "min": "##num", "max": "##num",
                        "of": { "date": "%date", "num": "%natural" }
                    }
                }
             },
            "remember": ["_id"],
            "indexes": [
            ]
        }
    ],
    "workloads": [
        {
            "name": "Insert",
            "template": "person",
            "op": "insert",
            "threads": 1,
            "batch": 0,
            "pace": 1000
        },
        {
            "name": "Find by key",
            "template": "person",
            "op": "find",
            "params": {
                "filter": { "_id": "#_id" }
            }
        }
    ]
    
}