{
    "connectionString": "mongodb://localhost:27017",
    "http": {
        "enabled": true,
        "port": 3000,
        "host": "localhost"
    },
    "reportInterval": 10000,
    "mongoReporter": {
        "enabled": true,
        "connectionString": "mongodb://localhost:27017",
        "database": "simrunner",
        "collection": "report",
        "drop": false,
        "runtimeSuffix": false
    },
    "templates": [
        {
            "name": "simple",
            "database": "simrunner",
            "collection": "simple",
            "drop": true,
            "template": {
                "_id": "%objectid",
                "string": "%lorem.sentence"
            },
            "remember": ["_id"]
        }
    ],
    "workloads": [

        {
            "comment": "Insert a simple record every 100ms",
            "name": "Insert",
            "template": "simple",
            "op": "insert",
            "threads": 1,
            "pace": 100
        },
        {
            "name": "find by _id",
            "template": "simple",
            "op": "find",
            "threads": 8,
            "params": {
              "filter": { "_id": "#_id" }
            }
        } 
    ]
    
}
