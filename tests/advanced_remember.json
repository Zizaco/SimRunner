{
    "connectionString": "mongodb://localhost:27017",
    "http": {
        "enabled": true,
        "port": 3000,
        "host": "localhost"
    },
    "reportInterval": 10000,
    "templates": [
        {
            "name": "remember",
            "database": "simrunner",
            "collection": "remember",
            "template": {
                "_id": "%objectid",
                "data": {
                    "cui": "%natural",
                    "cug": "%natural",
                    "sub": {
                        "something": "%lorem.word",
                        "else": "%lorem.word"
                    },
                    "padding": { "%array": {"min": 1, "max": 10, "of": "%lorem.sentence"} }
                }
             },
            "remember": [{"compound": ["data.cui", "data.sub.something"], "name": "dataLoaded", "preload": true, "number": 10}, "data.cui", "_id"],
            "indexes": []
        }
    ],
    "workloads": [
        {
            "name": "Insert",
            "template": "remember",
            "op": "insert",
            "pace": 100
        },
        {
            "name": "Descent",
            "template": "remember",
            "op": "find",
            "variables": {
                "dataVar": "#dataLoaded"
            },
            "params": {
                "filter": {
                    "data.cui": {"%descend": {"in": "##dataVar", "path": "data_cui"}},
                    "data.sub.something":  {"%descend": {"in": "##dataVar", "path": "data_sub_something"}}
                }
            },
            "pace": 100
        }
 
    ]
    
}